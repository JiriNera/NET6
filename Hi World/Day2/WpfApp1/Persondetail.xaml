<Window x:Class="WpfApp1.Persondetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Detail osoby" Height="350" Width="400">
    <StackPanel>
        <Label FontSize="18" Width="300" Height="33">Jmeno</Label>
        <TextBox x:Name="txtFirstName" Width="300" Height="20"></TextBox>
        <Label FontSize="18" Width="300" Height="30">Prijmeni</Label>
        <TextBox x:Name="txtLastName" Width="300" Height="20"></TextBox>
        <Label FontSize="18" Width="300" Height="30">Datum Narozeni</Label>
        <TextBox x:Name="txtBirthDay" Width="300" Height="20"></TextBox>
        <Button x:Name="btn_save" Content="Save" Click="btn_save_Click" Width="60" Height="20" Margin="0,0,0,30"/>
    </StackPanel>
</Window>
