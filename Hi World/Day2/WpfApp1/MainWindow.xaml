        <TextBox x:Name="txtbox_text" HorizontalAlignment="Left" Margin="31,40,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" Height="31" TextChanged="txtbox_text_TextChanged"/>
        <TextBlock x:Name="txtblock_list" HorizontalAlignment="Left" Margin="115,116,0,0" Text="List osob:" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="93" FontSize="20" FontWeight="Normal"/>
        <DataGrid x:Name="grdPeopel" VerticalAlignment="Bottom" Height="200" SelectionChanged="grdPeopel_Selected"/>
        <Button x:Name="btn_new_person" Content="Pridat osobu" HorizontalAlignment="Left" Height="56" Margin="270,105,0,0" VerticalAlignment="Top" Width="112" Click="btn_new_person_Click"/>
        <Button x:Name="btn_reset" Content="Reset hledani" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Height="36" Width="60" FontSize="9" Click="btn_reset_Click"/>

    </Grid>
</Window>
